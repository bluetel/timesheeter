{
  "name": "timesheeter",
  "private": false,
  "version": "0.1.0",
  "workspaces": [
    "packages/*"
  ],
  "type": "module",
  "scripts": {
    "dev": "pnpm db:migrate:dev && pnpm dev:sst",
    "dev:sst": "sst dev",
    "dev:web": "pnpm run -C packages/web dev",
    "watch": "pnpm run tsc:watch",
    "tsc": "tsc -b",
    "tsc:watch": "tsc -b --watch",
    "generate": "pnpm run --recursive generate",
    "postinstall": "pnpm run generate && pnpm build:common",
    "test": "pnpm testall",
    "test:ci": "pnpm test",
    "testall": "pnpm tsc && pnpm test:backend && pnpm test:web",
    "test:backend": "pnpm db:start && pnpm generate && pnpm run -C packages/web migrate:test && vitest run",
    "test:web": "pnpm run -C packages/web test",
    "lint": "pnpm run --recursive --aggregate-output lint && pnpm lint:toplevel",
    "lint:toplevel": "eslint --ext .js,.ts,.tsx stacks",
    "lint:fix": "pnpm run lint -- --fix",
    "build": "pnpm build:common && pnpm build:backhouse:image && pnpm build:web",
    "build:common": "pnpm run -C packages/common build",
    "build:web": "pnpm run -C packages/web build",
    "build:ci": "pnpm run tsc",
    "deploy:staging": "pnpm generate && pnpm build:common && sst deploy --stage staging",
    "deploy:production": "pnpm generate && pnpm build:common && sst deploy --stage production",
    "remove": "sst remove",
    "prettier:exc": "./node_modules/.bin/prettier --config .prettierrc.yaml --write",
    "prettier": "pnpm run prettier:exc -- '**/*.{js,ts,tsx,css,json,yaml,yml,md}'",
    "db:migrate:dev": "pnpm db:start && pnpm -C packages/web migrate:dev",
    "db:migrate:test": "pnpm db:start && pnpm -C packages/web migrate:test",
    "db:start": "scripts/start-local-containers.sh",
    "db:stop": "docker-compose down",
    "db:seed": "pnpm run --filter packages/web db:seed",
    "db:seed:clean": "pnpm run --filter packages/web db:seed:clean",
    "clean": "tsc -b --clean && rm -rf .build .sst dist && pnpm run --recursive --if-present clean"
  },
  "dependencies": {
    "@timesheeter/common": "workspace:*",
    "desm": "^1.3.0",
    "sst": "2.21.1",
    "tsc-alias": "^1.8.6",
    "tslib": "^2.4.0",
    "zod": "^3.21.4"
  },
  "devDependencies": {
    "@tsconfig/node18-strictest-esm": "^1.0.1",
    "@types/aws-lambda": "^8.10.102",
    "@types/node": "^18.0.0",
    "@typescript-eslint/eslint-plugin": "^5.52.0",
    "@typescript-eslint/parser": "^5.52.0",
    "aws-cdk-lib": "2.84.0",
    "aws-lambda": "^1.0.7",
    "concurrently": "^7.3.0",
    "constructs": "10.1.156",
    "cross-env": "^7.0.3",
    "dotenv": "^16.0.1",
    "dotenv-cli": "^5.1.0",
    "eslint": "^8.34.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-import-resolver-typescript": "^3.5.3",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-jsx-a11y": "^6.5.1",
    "eslint-plugin-react": "^7.30.0",
    "eslint-plugin-react-hooks": "^4.5.0",
    "fs-extra": "^10.1.0",
    "husky": "^7.0.4",
    "lint-staged": "^12.3.8",
    "prettier": "^2.6.2",
    "rimraf": "^3.0.2",
    "tsx": "^3.9.0",
    "typescript": "^4.9.5",
    "vite": "^3.0.8",
    "vite-tsconfig-paths": "*",
    "vitest": "^0.23.4"
  },
  "engines": {
    "node": ">=0.18",
    "npm": ">=7.0.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{yaml,yml}": [
      "yamllint"
    ],
    "{*.{ts,js},!(node*)**/*.{ts,tsx,js,jsx}}": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "pnpm": {
    "enable-pre-post-scripts": false
  }
}