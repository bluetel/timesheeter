{
    "name": "@timesheeter/backhouse",
    "version": "1.134.0",
    "main": "dist/src/index.js",
    "author": "",
    "license": "AGPL-3.0",
    "scripts": {
        "dev": "NODE_ENV=development nodemon --exec ts-node -r tsconfig-paths/register ./src/app.ts",
        "build": "tsc",
        "start": "node ./dist/app.js",
        "lint": "eslint --fix --quiet src/**/*.ts",
        "format": "prettier --loglevel silent --write src/**/*.ts",
        "test": "jest",
        "test:watch": "jest --watch",
        "test:coverage": "jest --coverage",
        "bullmq:redis:up:dev": "docker-compose -f bullmq-redis.docker-compose.yml --env-file .env up -d",
        "bullmq:redis:down:dev": "docker-compose -f bullmq-redis.docker-compose.yml down"
    },
    "dependencies": {
        "@timesheeter/app": "*",
        "axios": "^1.4.0",
        "axios-rate-limit": "^1.3.0",
        "bullmq": "^3.15.3",
        "dotenv": "^16.1.4",
        "jira-client": "^8.2.2",
        "zod": "^3.21.4"
    },
    "devDependencies": {
        "@types/jest": "^29.5.2",
        "@types/jira-client": "^7.1.6",
        "@types/node": "^20.2.5",
        "@typescript-eslint/eslint-plugin": "^5.59.9",
        "@typescript-eslint/parser": "^5.59.9",
        "eslint": "^8.42.0",
        "eslint-config-prettier": "^8.8.0",
        "eslint-plugin-prettier": "^4.2.1",
        "jest": "^29.5.0",
        "nodemon": "^2.0.22",
        "prettier": "^2.8.8",
        "ts-jest": "^29.1.0",
        "ts-node": "^10.9.1",
        "typescript": "^5.1.3",
        "typescript-eslint-parser": "^22.0.0"
    }
}
